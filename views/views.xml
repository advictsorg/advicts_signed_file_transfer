<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_sign" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.sign</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="40"/>
            <field name="inherit_id" ref="sign.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//block[@name='sign']" position="inside">
                    <setting id="sign_folder_id" string="Sign Folder" help="Folder to Save The Fully Signed Files">
                            <field name="sign_folder_id"/>
                        </setting>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
